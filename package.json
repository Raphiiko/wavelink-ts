{
  "name": "@raphiiko/wavelink-ts",
  "version": "1.1.0",
  "description": "TypeScript library for controlling Elgato Wave Link 3.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.{json,md}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "elgato",
    "wave",
    "wavelink",
    "audio",
    "mixer",
    "stream",
    "typescript"
  ],
  "author": "Raphiiko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Raphiiko/wavelink-ts.git"
  },
  "bugs": {
    "url": "https://github.com/Raphiiko/wavelink-ts/issues"
  },
  "homepage": "https://github.com/Raphiiko/wavelink-ts#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "PROTOCOL.md",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "prettier": "^3.7.4",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
